#include <iostream>

using namespace std;

int main()
{
    int x;
    float a=0, y;
    cin>>x>>y;
    switch (x) {
        case 1:
            cout<<y<<"кг";
        break;
        case 2:
            a=y/1000000;
            cout<<y<<"мг ="<<a<<"кг";
        break;
        case 3:
            a=y/1000;
            cout<<y<<"гр ="<<a<<"кг";
        break;
        case 4:
            a=y*1000;
            cout<<y<<"т ="<<a<<"кг";
        break;
        case 5:
            a=y*100;
            cout<<y<<"ц ="<<a<<"кг";
        break;
    }
    return 0;
}
